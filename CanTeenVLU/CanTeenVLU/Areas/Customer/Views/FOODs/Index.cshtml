                            <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                            <li data-target="#slider-carousel" data-slide-to="1"></li>
                            <li data-target="#slider-carousel" data-slide-to="2"></li>
                        </ol>

                        <div class="carousel-inner">
                            <div class="item active">
                                <div class="col-sm-6">
                                    <h1><span>CanTeen Văn Lang</span></h1>
                                    <h2>Chè</h2>
                                    <button type="button" class="btn btn-default get">Đặt ngay</button>
                                </div>
                                <div class="col-sm-6">
                                    <img src="~/Images/che.jpg" class="girl img-responsive" alt="" />
                                </div>
                            </div>
                            <div class="item">
                                <div class="col-sm-6">
                                    <h1><span>CanTeen Văn Lang</span></h1>
                                    <h2>Sinh tố bơ</h2>
                                    <button type="button" class="btn btn-default get">Đặt ngay</button>
                                </div>
                                <div class="col-sm-6">
                                    <img src="~/Images/sinhto.jpg" class="girl img-responsive" alt="" />
                                </div>
                            </div>

                            <div class="item">
                                <div class="col-sm-6">
                                    <h1><span>CanTeen Văn Lang</span></h1>
                                    <h2>Cơm chiên trứng</h2>
