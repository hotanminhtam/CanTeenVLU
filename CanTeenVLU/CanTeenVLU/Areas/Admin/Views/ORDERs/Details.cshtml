@model CanTeenVLU.Models.ORDER

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <h2 style="font-family:'Times New Roman', Times, serif">Chi tiết hoá đơn</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label class="control-label col-md-2" style="font-family:'Times New Roman', Times, serif" for="IMG">Mã hoá đơn</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ORDER_CODE)
        </dd>

        <dt>
            <label class="control-label col-md-2" style="font-family:'Times New Roman', Times, serif" for="IMG">Ngày</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DATE)
        </dd>

        <dt>
            <label class="control-label col-md-2" style="font-family:'Times New Roman', Times, serif" for="IMG">Trạng thái</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.STATUS)
        </dd>

        <dt>
            <label class="control-label col-md-2" style="font-family:'Times New Roman', Times, serif" for="IMG">Phản hồi</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FEEDBACK)
        </dd>

        <dt>
            <label class="control-label col-md-2" style="font-family:'Times New Roman', Times, serif" for="IMG">Email</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ACCOUNT.EMAIL)
        </dd>

        <dt>
            <label class="control-label col-md-2" style="font-family:'Times New Roman', Times, serif" for="IMG">Tài khoản</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CUSTOMER.EMAIL)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Trở lại", "Index")
</p>
